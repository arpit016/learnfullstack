<div class="row">
  <div class="col m6 offset-m3 center">
    <h5>Forgot your password?</h5>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <% if resource.errors.any? %>
        <% resource.errors.full_messages.each do |error| %>
          <%= js add_gritter(error, title: "Error:", sticky: false) %>
        <% end %>
      <% end %>
    
      <div class="input-field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, class: "border-bottom" %>
      </div>
      
      
      <button class="btn waves-effect waves-light" type="submit" name="action">Send me reset password instructions
        <i class="material-icons right">send</i>
      </button>
    
    <% end %>
  </div>
</div>
