.row
  .col.m4
    .card.z-depth-2
      .card-content
        .collection
          - @tasks.each do |task|
            - if task.header
              .collection-item.active
                %i.mdi-social-school
                  = task.title
            - else
              - if @task.id == task.id
                = link_to [task.project, task], class: "collection-item current-task" do
                  = task.title
              - else
                = link_to [task.project, task], class: "collection-item list-task" do
                  = task.title
  .col.m8
    .card.z-depth-2
      .card-content
        .wistia_responsive_padding{:style => "padding:60.63% 0 0 0;position:relative;"}
          .wistia_responsive_wrapper{:style => "height:100%;left:0;position:absolute;top:0;width:100%;"}
            %div{:class => "wistia_embed wistia_async_#{@task.video}", :id => "wistia_player", :style => "height:100%;width:100%"}
        .row.buttons
          .col.m6
            - if !@prev_task.nil?
              = link_to "Previous", [@task.project, @prev_task], class: "btn btn-primary"
          .col.m6
            - if !@next_task.nil?
              = link_to "Next", [@task.project, @next_task], class: "btn btn-primary"
      .card-action.grey-text.text-darken-4
        %h5= @task.title
        %hr
        = markdown(@task.note)



